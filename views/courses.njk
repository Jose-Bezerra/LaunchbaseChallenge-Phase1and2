  {% extends  'layout.njk' %}
  
  {% block content %}
  <div id="wrapper">
    <h1>Cursos</h1>
  </div>

  <section id="section" class="cards">
    
    {% for course in courses %}
    <div id="{{course.id}}" class="card">

      <div class="card_image-container">
        <img src="https://skylab.rocketseat.com.br/static/{{course.logo}}" alt="logo Starter">
        {% if course.featured %}
          <div class="featured">Featured</div>
        {% endif %}
      </div>
        
      <div class="card-info">
        
        <p>{{course.duration}}</p>
        <p class="card-price">{{course.price}}</p>
      </div>

    </div>
    {% endfor %}
  </section>
    

  <section id="footer" class="footer">

    <a href="http://fb.com/rocketseat" target="_blank" rel="noopener noreferrer">Facebook</a>

    <a href="http://instagram.com/rocketseat_oficial" target="_blank" rel="noopener noreferrer">Instagram</a>

    <a href="https://github.com/rocketseat" target="_blank" rel="noopener noreferrer">Github</a>

    <a href="http://youtube.com/rocketseat" target="_blank" rel="noopener noreferrer">Youtube</a>

  </section> 

